<% layout('layouts/boilerplate') %> 

<div class="container display-flex justify-content-center align-items-center">
<div class="row">
  <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
    <div class="card shadow">
      <img src="https://images.unsplash.com/photo-1598507690808-57594afea85f?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1934&q=80" class="card-img-top" alt="">
      <div class="card-body">
        <h5 class="card-title">Login</h5>
        <form class="validated-form" action="/login" method="POST" novalidate>
          <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input type="text" class="form-control" id="username" name="username" autofocus required>
            <div class="invalid-feedback">Must provide a username</div>
          </div>
        
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password" name="password" required>
            <div class="invalid-feedback">Must provide a password.</div>
          </div>
          <div class="d-grid">
            <button class="btn btn-success">Login</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
</div>